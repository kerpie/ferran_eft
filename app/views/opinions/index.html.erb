<% if notice %>
  <div class="row">
    <div class="col-md-12">
      <p id="notice"><%= notice %></p>
    </div>
  </div>
<% end %>

<div class="row">
  <div class="col-md-12">
    <h1 class="page-header">Comentarios registrados</h1>
  </div>
</div>

<div class="row">
  <div class="col-md-12">
    <% @opinions.each do |opinion| %>
      <div class="col-sm-6 col-md-4">
        <div class="thumbnail">
          <%= image_tag opinion.image.url, class: "" %>
          <div class="caption">
            <h3>Comentario</h3>
            <p>
              <%= opinion.comment %>
            </p>
            <p>
              <%= link_to 'Mostrar', opinion, class: "btn btn-primary" %>
              <%= link_to 'Eliminar', opinion, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %>
            </p>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>

<br>

<div class="row">
  <div class="col-md-4 col-md-offset-4">
    <%= link_to 'Nuevo comentario', new_opinion_path, class: "btn btn-default btn-block" %>
  </div>
</div>
