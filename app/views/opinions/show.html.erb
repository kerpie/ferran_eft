<% if notice %>
  <div class="row">
    <div class="col-md-12">
      <p id="notice"><%= notice %></p>
    </div>
  </div>
<% end %>

<div class="row">
  <div class="col-md-12">
    <h1 class="page-header">Comentario</h1>
  </div>
</div>

<div class="row">
	<div class="col-md-12">
		<div class="panel panel-default">
			<div class="panel-heading">
				<h3 class="panel-title">comentario: </h3>
			</div>
			<div class="panel-body">
				<p>
					<%= @opinion.comment %>
				</p>
			</div>
		</div>
	</div>
	<div class="col-md-12">
		<div class="panel panel-default">
			<div class="panel-heading">
				<h3 class="panel-title">Imagen pequeña: </h3>
			</div>
			<div class="panel-body">
				<%= image_tag @opinion.image.url(:thumb), class: "img-responsive img-thumbnail" %>	
			</div>
		</div>
	</div>
	<div class="col-md-12">
		<div class="panel panel-default">
			<div class="panel-heading">
				<h3 class="panel-title">Imagen mediana: </h3>
			</div>
			<div class="panel-body">
				<%= image_tag @opinion.image.url(:medium), class: "img-responsive img-thumbnail" %>	
			</div>
		</div>
	</div>
	<div class="col-md-12">
		<div class="panel panel-default">
			<div class="panel-heading">
				<h3 class="panel-title">Imagen grande: </h3>
			</div>
			<div class="panel-body">
				<%= image_tag @opinion.image.url, class: "img-responsive img-thumbnail" %>	
			</div>
		</div>
	</div>
</div>

	<div class="col-md-12">
		<div class="panel panel-default">
			<div class="panel-heading">
				<h3 class="panel-title">Imagen pequeña(en escala de grises): </h3>
			</div>
			<div class="panel-body">
				<%= image_tag @opinion.grayscale_image.url(:thumb), class: "img-responsive img-thumbnail" %>	
			</div>
		</div>
	</div>
	<div class="col-md-12">
		<div class="panel panel-default">
			<div class="panel-heading">
				<h3 class="panel-title">Imagen mediana(en escala de grises): </h3>
			</div>
			<div class="panel-body">
				<%= image_tag @opinion.grayscale_image.url(:medium), class: "img-responsive img-thumbnail" %>	
			</div>
		</div>
	</div>
	<div class="col-md-12">
		<div class="panel panel-default">
			<div class="panel-heading">
				<h3 class="panel-title">Imagen grande(en escala de grises): </h3>
			</div>
			<div class="panel-body">
				<%= image_tag @opinion.grayscale_image.url, class: "img-responsive img-thumbnail" %>	
			</div>
		</div>
	</div>

<div class="row">
  <div class="col-md-4 col-md-offset-4">
  	<div class="btn-group btn-group-justified" role="group" aria-label="...">
  		<%= link_to 'Editar', edit_opinion_path(@opinion), class: "btn btn-default" %>
  		<%= link_to 'Volver', opinions_path, class: "btn btn-default" %>
	</div>
  </div>
</div>
